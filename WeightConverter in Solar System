earth_weight = float(input('Your weight on Earth: '))
planet_number = int(input('Planet number: '))

if planet_number == 1:
    destination_weight = earth_weight * 0.38
    print('Your weight on Mercury is: ' + str(destination_weight))
elif planet_number == 2:
    destination_weight = earth_weight * 0.91
    print('Your weight on Venus is: ' + str(destination_weight))
elif planet_number == 3:
    destination_weight = earth_weight * 0.38
    print('Your weight on Mars is: ' + str(destination_weight))
elif planet_number == 4:
    destination_weight = earth_weight * 2.53
    print('Your weight on Jupiter is: ' + str(destination_weight))
elif planet_number == 5:
    destination_weight = earth_weight * 1.07
    print('Your weight on Saturn is: ' + str(destination_weight))
elif planet_number == 6:
    destination_weight = earth_weight * 0.89
    print('Your weight on Uranus is: ' + str(destination_weight))
elif planet_number == 7:
    destination_weight = earth_weight * 1.14
    print('Your weight on Neptune is: ' + str(destination_weight))
else:
    print('Invalid planet number')
